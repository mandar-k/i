#Modified routes

# Views
GET         /                                       controllers.ViewController.index
GET         /about                                  controllers.ViewController.about
GET         /app                                    controllers.ViewController.app
GET         /signin                                 controllers.ViewController.signin
GET         /signup                                 controllers.ViewController.signup


#terms
->          /terms                                  terms.Routes

# api
->          /api/v1alpha                            api.v1.Routes


# Map static resources from the /public folder to the /assets URL path
GET         /webjars/*file                          controllers.WebJarAssets.at(file)
GET         /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)